#region alg
static int Z11(double[] array, double x)
{
    int i1 = 0;
    int i2 = array.Length - 1;
    int i = (i1 + i2) / 2;
    while (i2 > i1)
    {
        if (array[i] == x)
        {
            return i;
        }
        else
        {
            if (array[i] > x)
            {
                i2 = i + 1;
                i = (i1 + i2) / 2;
            }
            else
            {
                i1 = i + 1;
                i = (i1 + i2) / 2;
            }
        }
    }
    return -1;
}

static int[] Z12(int[] a, int[] b)
{
    int[] c = new int[a.Length + b.Length];

    int min = Math.Min(a.Length, b.Length);
    for (int i = 0; i < min; i++)
    {
        c[2 * i] = a[i];
        c[2 * i + 1] = b[i];
    }
    if (a.Length != b.Length)
    {
        int count = min * 2;
        if (a.Length > b.Length)
        {
            for (int i = min; i < a.Length; i++)
            {
                c[count] = a[i];
                count++;
            }
        }
        else
        {
            for (int i = min; i < b.Length; i++)
            {
                c[count] = b[i];
                count++;
            }
        }
    }
    return c;
}
#region Z13
{
    Console.WriteLine("Task 13");
    Console.WriteLine("Write  size of array A");
    if (Int32.TryParse(Console.ReadLine(), out int size_a13))
    {
        double[] a13 = new double[size_a13];
        for (int i = 0; i < a13.Length; i++)
        {
            Console.WriteLine("Write x" + i);
            Double.TryParse(Console.ReadLine(), out a13[i]);
        }
        Console.WriteLine("Write  size of array B");
        if (Int32.TryParse(Console.ReadLine(), out int size_b13))
        {
            double[] b13 = new double[size_b13];
            for (int i = 0; i < b13.Length; i++)
            {
                Console.WriteLine("Write x" + i);
                Double.TryParse(Console.ReadLine(), out b13[i]);
            }
            double[] c13 = new double[a13.Length + b13.Length];
            Array.Sort(a13);
            Array.Reverse(a13);
            Array.Sort(b13);
            Array.Reverse(b13);
            int j_a13 = 0, j_b13 = 0;
            for (int i = 0; i < c13.Length; i++)
            {
                if (j_a13 < a13.Length)
                {
                    if (j_b13 < b13.Length)
                    {
                        if (a13[j_a13] > b13[j_b13])
                        {
                            c13[i] = a13[j_a13];
                            j_a13++;
                        }
                        else
                        {
                            c13[i] = b13[j_b13];
                            j_b13++;
                        }
                    }
                    else
                    {
                        c13[i] = a13[j_a13];
                        j_a13++;
                    }
                }
                else
                {
                    c13[i] = b13[j_b13];
                    j_b13++;
                }
            }
            Console.WriteLine(String.Join(" ", c13));
        }
    }
}
    #endregion
    static int[] Z14(int[] array)

{

    for (int i = 0; i < array.Length / 2; i++)

    {

        int temp = array[i];

        array[i] = array[array.Length - i - 1];

        array[array.Length - i - 1] = temp;

    }

    return array;

}




static int[] Z15(int[] array)

{

    int[] result = new int[array.Length];

    int count = 0;

    int f = Convert.ToInt32(Console.ReadLine());

    for (int i = array.Length - (f % array.Length); i < array.Length; i++)

    {

        result[count] = array[i];

        count++;

    }




    for (int i = 0; i < array.Length - (f % array.Length); i++)

    {

        result[count] = array[i];

        count++;

    }

    return result;

}
