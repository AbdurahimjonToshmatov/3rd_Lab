{
    if (array[i] > max)
    {
        max = array[i];
        maxin = i;
    }
    else if (array[i] < min)
    {
        min = array[i];
        minin = i;
    }
}

if (minin > maxin)
{
    maxin += minin;
    minin = maxin - minin;
    maxin = maxin - minin;
}
else if (minin == maxin)
{
    Console.WriteLine("Massive contain the same elements");
}

newlen = Math.Abs(maxin - minin) - 1;
if (newlen <= 0)
    Console.WriteLine("There's no elements between min and max");
else
{
    newarr = new double[newlen];
}

