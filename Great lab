#region 2.5
Console.WriteLine("Enter lentgh of massive");
len = Convert.ToInt32(Console.ReadLine());
array = new double[len];
for (int i = 0; i < len; i++) //ввод исходного массива
{
    Console.WriteLine($"Enter {i} value of array");
    array[i] = Convert.ToDouble(Console.ReadLine());
}

for (int i = 0; i < len; i++) //Определние макс и мин индексов и значений массива
{
    if (array[i] > max)
    {
        max = array[i];
        maxin = i;
    }
    else if (array[i] < min)
    {
        min = array[i];
        minin = i;
    }
}

if (minin > maxin)
{
    maxin += minin;
    minin = maxin - minin;
    maxin = maxin - minin;
}
else if (minin == maxin)
{
    Console.WriteLine("Massive contain the same elements");
}

newlen = Math.Abs(maxin - minin) - 1;
if (newlen <= 0)
    Console.WriteLine("There's no elements between min and max");
else
{
    newarr = new double[newlen];
}

k = 0;
for (int i = minin + 1; i < maxin; i++)
{
    if (array[i] < 0)
    {
        newarr[k] = array[i];
        Console.Write($"{newarr[k]} ");
        k++;
    }
}


