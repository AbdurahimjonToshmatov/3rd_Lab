{
    if (array[i] < array[i + 1])
    {
        temp++;
        max_pos = Math.Max(max_pos, temp);
    }
    else
    {
        temp = 1;
    }
    if (array[i] > array[i + 1])
    {
        temp1++;
        max_neg = Math.Max(max_neg, temp1);
    }
    else
    {
        temp1 = 1;
    }
}
max = Math.Max(max_pos, max_neg);
Console.WriteLine(max);
