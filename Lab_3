                    if (i == kk)
                    {
                        for (int j = 0; j < BB.Length; j++)
                        {
                            Console.Write(BB[j] + " ");
                        }
                        Console.Write(AA[i] + " ");
                    }
                    else
                    {
                        Console.Write(AA[i] + " ");
                    }
                }
            }
