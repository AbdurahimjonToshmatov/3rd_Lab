            Console.WriteLine("Type the array:");
            for (int i = 0; i < V.Length; i++)
            {
                V[i] = Convert.ToDouble(Console.ReadLine());
                if (V[i] < 0)
                {
                    f = 1;
                    m = V[i];
                    n = i;
                }
            }
            if (f == 0)
            {
                Console.WriteLine("Nope");
            }
            else 
            {
                Console.WriteLine($"Value = {m}, " + $"index = {n}");
            }
            #endregion
            
