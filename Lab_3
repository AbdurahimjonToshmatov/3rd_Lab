            for (int i = 0; i < A.Length; i++)
            {
                A[i] = Convert.ToDouble(Console.ReadLine());
                if (i%2==0)
                {
                    B[i / 2] = A[i];
                }
                else
                {
                    C[(i-1) / 2] = A[i];
                }
            }
            var str1 = string.Join(" ", B);
            var str2 = string.Join(" ", C);
            Console.WriteLine("1st array: " + str1 + "\n2nd array: " + str2);
