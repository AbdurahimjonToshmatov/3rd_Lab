            // 1st lvl (6, 10, 11, 12, 13)
            #region 6
            double s = 0;
            Console.WriteLine("Start typing 'X':");
            for (int i = 0; i < 5; i++)
            {
                Console.WriteLine($"x{i + 1}:");
                double x = Convert.ToDouble(Console.ReadLine());
                s += x * x;
            }
            s = Math.Pow(s, 0.5);
            Console.WriteLine($"L = {s}");
            #endregion

            #region 10
            Console.WriteLine("Type P:");
            double P = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine("Type Q:");
            double Q = Convert.ToDouble(Console.ReadLine());
            if (P >= Q)
            {
                Console.WriteLine("No");
            }
            else
            {
                Console.WriteLine($"There are {Q - P - 1} symbol(s) between them");
            }
            #endregion
            
            #region 11
