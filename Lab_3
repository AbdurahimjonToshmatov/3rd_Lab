                    if (SS[i] > 0 && SS[i] < mi)
                    {
                        imi = i;
                    }
                }
                for (int i = 0; i < SS.Length; i++)
                {
                    if (i != imi)
                    {
                        Console.Write(SS[i] + " ");
                    }
                }
