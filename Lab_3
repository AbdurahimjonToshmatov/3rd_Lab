            string S = "";
            Console.WriteLine("Type the array:");
            for (int i = 0; i < W.Length; i++)
            {
                W[i] = Convert.ToDouble(Console.ReadLine());
                if (W[i] > 0)
                {
                    S += Convert.ToString(W[i]) + " ";
                }
            }
            Console.WriteLine(S);
            #endregion
            
