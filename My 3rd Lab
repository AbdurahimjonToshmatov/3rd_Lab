#region // level 3 Task 9

double[] a = new double[0];
string s;
int n = 0;
Console.WriteLine("Enter values for array");
s = Console.ReadLine();
while (s != "$")
{
    Array.Resize<double>(ref a, a.Length + 1);
    a[^1] = Convert.ToDouble(s);
    s = Console.ReadLine();
    n += 1;
}
int currentSize = 0;
int j;
int c;
int max = 0;
for (int i = 1; i < n; i++)
{
    if (a[i - 1] < a[i])
    {
        currentSize = 2;
        j = i;
        while (a[j - 1] < a[j] && j < n - 1)
        {
            j += 1;
            currentSize += 1;
        }
    }
    if (currentSize > max)
    {
        max = currentSize;
    }
    if (a[i - 1] > a[i])
    {
        currentSize = 2;
        c = i;
        while (a[c - 1] > a[c] && c < n - 1)
        {
            c += 1;
            currentSize += 1;
        }
    }
    if (currentSize > max)
    {
        max = currentSize;
    }
}

Console.WriteLine($"The longest ordered chain is {max}");

#endregion



