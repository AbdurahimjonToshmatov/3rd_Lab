#region // level 2 Task 5

double[] original = new double[0];

int n = 0;
string s;
Console.WriteLine("Enter values for original array, if values have run out, enter $");
s = Console.ReadLine();
while (s != "$")
{
    Array.Resize<double>(ref original, original.Length + 1);
    original[^1] = Convert.ToDouble(s);
    s = Console.ReadLine();
    n += 1;
}

double max = original[0];
double min = original[0];
int imax = 0;
int imin = 0;
for (int i = 1; i < n; i++)
{
    if (original[i] > max)
    {
        max = original[i];
        imax = i;
    }
    if (original[i] < min && original[i] > 0)
    {
        min = original[i];
        imin = i;
    }
}


int p = 0;
int k1 = Math.Min(imax, imin);
int k2 = Math.Max(imax, imin);
List<double> negativeList = new List<double>();
for (int i = k1; i < k2; i++)
{
    if (original[i] < 0)
    {
        negativeList.Add(original[i]);
        p += 1;
    }
}
double[] negative = new double[negativeList.Count];
negativeList.CopyTo(negative);

Console.WriteLine($"Array with negative elements between max and min is");
for (int c = 0; c < p; c++)
{
    Console.Write(negative[c]);
    Console.Write(" ");
}

#endregion



#region // level 2 Task 9

double[] original = new double[0];
int n = 0;
string s;
Console.WriteLine("Enter values for original array, if values have run out, enter $");
s = Console.ReadLine();
while (s != "$")
{
    Array.Resize<double>(ref original, original.Length + 1);
    original[^1] = Convert.ToDouble(s);
    s = Console.ReadLine();
    n += 1;
}

double max = original[0];
int imax = 0;
double min = original[0];
int imin = 0;
for (int i = 1; i < n; i++)
{
    if (original[i] > max)
    {
        max = original[i];
        imax = i;
    }
    if (original[i] < min)
    {
        min = original[i];
        imin = i;
    }
}

double sum = 0;
int a = 0;
int k1 = Math.Min(imax, imin);
int k2 = Math.Max(imax, imin);
for (int i = k1; i < k2; i++)
{
    sum += original[i];
    a += 1;
}

Console.WriteLine($"Average of elements between max and min is {sum / a}");

