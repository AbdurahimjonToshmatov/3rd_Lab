#region // level 1 Task 6
using System.Linq;

double[] vector = new double[5];
string s;
double L = 0, A = 0;
Console.WriteLine("Enter values of vectors length");
for (int i = 0; i < 5; i++)
{
    s = Console.ReadLine();
    vector[i] = Convert.ToDouble(s);
}
for (int i = 0; i < 5; i++)
{
    A += (vector[i] * vector[i]);
}
L = Math.Sqrt(A);
Console.WriteLine($"vector length = {L}");

#endregion



#region // level 1 Task 10
double[] array = new double[10];
string s;

int n = 0;
Console.WriteLine("Enter values of P and Q, P<Q");
double P = Convert.ToDouble(Console.ReadLine());
double Q = Convert.ToDouble(Console.ReadLine());
if (P > Q)
{
    Console.WriteLine($"P must be smaller then Q, so make swop of values");
    int P1 = 0;
    P = P1;
    P = Q;
    Q = P1;
}
Console.WriteLine("Enter values for array");
for (int i = 0; i < 10; i++)
{
    s = Console.ReadLine();
    array[i] = Convert.ToDouble(s);
}
for (int i = 0; i < 10; i++)
{
    if (P < array[i] && array[i] < Q)
    {
        n += 1;
    }
}
Console.WriteLine($"Numbers of values is {n}");
#endregion



#region // level 1 Task 11

double[] original = new double[10];
double[] result = new double[10];
string s;
int n = 0;
Console.WriteLine("Enter values for original array");
for (int i = 0; i < 10; i++)
{
    s = Console.ReadLine();
    original[i] = Convert.ToDouble(s);
}
foreach (double x in original)
{
    if (x > 0)
    {
        result[n] = x;
        n += 1;
    }
}
Array.Resize(ref result, n);
Console.WriteLine($"New array with positive elements from original is");
for (int i = 0; i < n; i++)
{
    Console.Write(result[i]);
    Console.Write(" ");
}


#endregion


