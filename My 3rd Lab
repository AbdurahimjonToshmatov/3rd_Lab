{
    if (i % 2 != 0)
    {
        uneven[n1] = original[i];
        n1 += 1;
    }
    else
    {
        even[n2] = original[i];
        n2 += 1;
    }
}
Console.WriteLine($"Array with even elements is");
for (int i = 0; i < 5; i++)
{
    Console.Write(even[i]);
    Console.Write(" ");
}
