#region 3.1
int[] array = new int[12] { 1, -5, -9, -111, 2, 5, 7, 120, 8, 120, -10, 120 };
List<int> array1 = new List<int>();
int max = 1;
for (int i = 0; i < 12; i++)
{
    if (array[i] == max)
    {
        array1.Add(i);
    }
    if (array[i] > max)
    {
        max = array[i];
        array1.Clear();
        array1.Add(i);
    }
}
for (int i = 0; i < array1.Count; i++)
{
    Console.Write($"  {array1[i]}  ");
}
Console.WriteLine();
#endregion

#region 3.9
int[] array9 = new int[] { -9, -11, 83, -32, -5, -2, -1, 22, 44, 2, 101, 204 };
int up = 0, down = 0;
max = 0;

for (int i = 0; i < array9.Length - 1; i++)
{
    if (up > max)
    {
        max = up;
    }

    if (down > max)
    {
        max = down;
    }

    if (array9[i] > array9[i + 1])
    {
        down++;
    }
    else down = 0;

    if (array9[i] < array9[i + 1])
    {
        up++;
    }
    else up = 0;
}

